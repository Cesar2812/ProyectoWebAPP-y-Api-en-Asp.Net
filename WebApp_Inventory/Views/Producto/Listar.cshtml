@using Persistencia.Entities
@model List<Producto_Stock>
@{
    ViewData["Title"] = "INVENTARIO DE PRODUCTOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary-dark">
        STOCK DE PRODUCTOS
    </div>
    <div class="card-body">
        <a asp-action="Crear" asp-controller="Producto" class="btn btn-success"><i class="bi bi-plus-circle"></i> Asignar Nuevo</a>

        <hr />

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>CODIGO</th>
                    <th>PRODUCTO</th>
                    <th>TIPO</th>
                    <th>FORMA DE VENTA</th>
                    <th>SIMBOLO</th>
                    <th>STOCK</th>
                    <th>ESTADO</th>
                    <th>ACCCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo_Producto</td>
                        <td>@item.Producto?.Nombre</td>
                        <td>@item.Producto?.TipoProducto?.Descripcion_Tipo</td>
                        <td>@item.FormaVenta?.Descripcion_FormaVenta</td>
                        <td>@item.FormaVenta?.Simbolo</td>
                        <td>@item.Stock</td>
                        <td>
                            <span class="badge @(item.Estado ? "bg-success" : "bg-danger")">
                                @(item.Estado ? "Disponible" : "No Disponible")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Editar" asp-controller="Producto" asp-route-id="@item.Codigo_Producto" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="Producto" asp-route-id="@item.Codigo_Producto" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

