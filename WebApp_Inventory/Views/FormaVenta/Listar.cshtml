@model List<Persistencia.Entities.Forma_Venta>
@{
    ViewData["Title"] = "Lista De Formas De Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
		LISTA DE FORMAS DE VENTA
    </div>
    <div class="card-body">
        <a asp-action="Crear" asp-controller="FormaVenta" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nueva</a>

        <hr />

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>DESCRIPCION</th>
                    <th>SIMBOLO</th>
                    <th>ACCCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var forma in Model)
                {
                    <tr>
                        <td>@forma.Descripcion_FormaVenta</td>
                        <td>@forma.Simbolo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="FormaVenta" asp-route-id="@forma.id_FormaVenta" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a asp-action="Eliminar" asp-controller="FormaVenta" asp-route-id="@forma.id_FormaVenta" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


